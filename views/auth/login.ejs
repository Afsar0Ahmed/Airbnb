<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Airbnb</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Airbnb colors as custom theme (optional) -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              airbnb: {
                light: '#FFF5F5',
                DEFAULT: '#FF5A5F',
                dark: '#E00B41',
              },
            },
          },
        },
      };
    </script>
  </head>

  <body
    class="min-h-screen flex items-center justify-center px-4 relative bg-cover bg-center"
    style="background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e');"
  >
    <!-- NAVIGATION BAR -->
    <nav class="absolute top-4 right-6 flex space-x-6 text-sm font-medium">
      <a href="/" class="text-airbnb hover:text-airbnb-dark transition">Home</a>
      <a href="/listings" class="text-airbnb hover:text-airbnb-dark transition">All Listings</a>
      <a href="/about" class="text-airbnb hover:text-airbnb-dark transition">About</a>
    </nav>

    <!-- Main Container -->
    <div class="w-full max-w-5xl bg-white bg-opacity-90 rounded-2xl shadow-xl flex overflow-hidden">

      <!-- Left: Logo/Branding Section -->
      <div class="hidden md:flex w-1/2 bg-airbnb-light items-center justify-center p-8">
        <div class="text-center">
          <h1 class="text-4xl font-extrabold text-airbnb">Airbnb</h1>
          <p class="mt-2 text-gray-600 text-sm">Discover the world with us</p>
        </div>
      </div>

      <!-- Right: Login Form Section -->
      <div class="w-full md:w-1/2 p-8">
        <!-- Header -->
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">
          Log in to <span class="text-airbnb">Airbnb</span>
        </h2>

        <!-- Form -->
        <form action="/login" method="POST" class="space-y-5">
          <!-- Email -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-airbnb focus:outline-none"
              placeholder="you@example.com"
            />
          </div>

          <!-- Password -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input
              type="password"
              name="password"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-airbnb focus:outline-none"
              placeholder="••••••••"
            />
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full py-2.5 rounded-lg bg-airbnb hover:bg-airbnb-dark text-white font-semibold transition"
          >
            Log In
          </button>
        </form>

        <!-- Footer -->
        <p class="text-sm text-center text-gray-600 mt-6">
          Don’t have an account?
          <a href="/signup" class="text-airbnb hover:underline font-medium">Sign up</a>
        </p>
      </div>
    </div>
  </body>
</html>
