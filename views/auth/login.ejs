<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Airbnb</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Airbnb colors as custom theme -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              airbnb: {
                light: "#FFF5F5",
                DEFAULT: "#FF5A5F",
                dark: "#E00B41",
              },
            },
          },
        },
      };
    </script>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50">

    <!-- ✅ NAVBAR -->
    <!-- ✅ NAVBAR -->
<!-- ✅ NAVBAR -->
<nav class="w-full bg-white/80 backdrop-blur-md shadow-md fixed top-0 left-0 z-50 transition duration-300">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    
    <!-- Logo -->
    <a 
      href="/" 
      class="text-airbnb font-extrabold text-2xl hover:scale-105 transition-transform"
    >
      Airbnb
    </a>

    <!-- Links -->
    <div class="space-x-10 text-base font-medium flex items-center"> 
      <a href="/" class="text-black relative group">
        Home
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-airbnb transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="/listings" class="text-black relative group">
        All Listings
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-airbnb transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="/about" class="text-black relative group">
        About
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-airbnb transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="/login" class="text-airbnb font-semibold relative group">
        Login
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-airbnb transition-all duration-300 group-hover:w-full"></span>
      </a>
    </div>
  </div>
</nav>



    <!-- ✅ MAIN CONTENT -->
    <main class="flex-grow flex items-center justify-center px-4 pt-20 pb-12">
      <div class="w-full max-w-5xl bg-white rounded-2xl shadow-xl flex overflow-hidden">

        <!-- Left: Branding Section -->
        <div class="hidden md:flex w-1/2 bg-airbnb-light items-center justify-center p-8">
          <div class="text-center">
            <h1 class="text-4xl font-extrabold text-airbnb">Airbnb</h1>
            <p class="mt-2 text-gray-600 text-sm">Discover the world with us</p>
          </div>
        </div>

        <!-- Right: Login Form -->
        <div class="w-full md:w-1/2 p-8">
          <h2 class="text-2xl font-semibold text-gray-800 mb-6">
            Log in to <span class="text-airbnb">Airbnb</span>
          </h2>

          <form action="/login" method="POST" class="space-y-5">
            <!-- Email -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-airbnb focus:outline-none"
                placeholder="you@example.com"
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input
                type="password"
                name="password"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-airbnb focus:outline-none"
                placeholder="••••••••"
              />
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full py-2.5 rounded-lg bg-airbnb hover:bg-airbnb-dark text-white font-semibold transition"
            >
              Log In
            </button>
          </form>

          <p class="text-sm text-center text-gray-600 mt-6">
            Don’t have an account?
            <a href="/signup" class="text-airbnb hover:underline font-medium">Sign up</a>
          </p>
        </div>
      </div>
    </main>

    <!-- ✅ FOOTER -->
    <footer class="bg-gray-100 text-gray-600 text-sm py-6 border-t">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between px-6">
        <p>&copy; <%= new Date().getFullYear() %> Airbnb, Inc. All rights reserved.</p>
        <div class="flex space-x-4 mt-3 md:mt-0">
          <a href="/privacy" class="hover:text-airbnb">Privacy</a>
          <a href="/terms" class="hover:text-airbnb">Terms</a>
          <a href="/help" class="hover:text-airbnb">Help</a>
        </div>
      </div>
    </footer>
  </body>
</html>
