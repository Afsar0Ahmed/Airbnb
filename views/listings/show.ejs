<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Airnb - Listing Details</title>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" crossorigin="anonymous" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    body {
      background: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      animation: fadeIn 1.2s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .bg-glass {
      background: rgba(255, 255, 255, 0.88);
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
      backdrop-filter: blur(10px);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .bg-glass:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
    }

    .card-img-top {
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
      transition: transform 0.4s ease;
    }
    .card-img-top:hover {
      transform: scale(1.05);
    }

    /* Buttons */
    .btn {
      transition: all 0.25s ease-in-out;
      border-radius: 8px;
      font-weight: 500;
    }
    .btn-outline-primary:hover, .btn-primary:hover, .btn-success:hover {
      transform: translateY(-2px) scale(1.03);
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.3);
    }
    .btn-outline-danger:hover {
      background: #ff4d4d;
      color: white;
      transform: translateY(-2px);
    }

    a.btn i {
      margin-right: 6px;
    }

    /* Inputs & Textarea */
    textarea:focus, input:focus {
      box-shadow: 0 0 8px rgba(0, 123, 255, 0.5) !important;
      border-color: #80bdff !important;
      transform: scale(1.01);
    }

    /* Review Form */
    .review-box {
      background: #f9f9f9;
      border-radius: 12px;
      border: 1px solid #eee;
      transition: box-shadow 0.3s ease;
    }
    .review-box:hover {
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
    }

    h4.card-title {
      color: #ff4d4d;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include("../includes/navbar.ejs") %>

  <!-- Container -->
  <div class="container my-5">
    <div class="mb-4">
      <a href="/listings" class="btn btn-outline-light text-dark bg-white shadow-sm">
        <i class="fa-solid fa-arrow-left"></i> Back to Listings
      </a>
    </div>

    <!-- Card -->
    <div class="card bg-glass mx-auto" style="max-width: 32rem;">
      <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image">

      <div class="card-body">
        <h4 class="card-title fw-bold"><%= listing.title %></h4>
        <p class="card-text">
          <strong>Description:</strong> <%= listing.description %><br>
          <strong>Price:</strong> ₹ <%= listing.price.toLocaleString("en-IN") %> per night<br>
          <strong>Location:</strong> <%= listing.location %><br>
          <strong>Country:</strong> <%= listing.country %><br>
          <strong>Owner:</strong> <%= listing.owner %><br>
          <strong>Average Rating:</strong> <%= listing.averageRating || "Not rated yet" %> ⭐
        </p>

        <!-- Buttons -->
        <div class="d-flex justify-content-between my-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary w-45">
            <i class="fa-solid fa-pen-to-square"></i> Edit
          </a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="w-45">
            <button class="btn btn-outline-danger w-100" type="submit">
              <i class="fa-solid fa-trash"></i> Delete
            </button>
          </form>
        </div>

        <a href="/contact-owner/<%= listing.ownerId %>" class="btn btn-outline-primary w-100 mb-3">
          <i class="fa-solid fa-envelope"></i> Contact Owner
        </a>

        <!-- Review Form -->
        <div class="review-box p-4 mt-4">
          <h5 class="mb-3 text-primary"><i class="fa-solid fa-comment-dots"></i> Leave a Review</h5>
          <form action="/listings/<%= listing._id %>/review" method="POST">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating: 
                <span id="ratingValue" class="fw-bold text-dark">3</span>/5
              </label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" value="3" oninput="document.getElementById('ratingValue').innerText = this.value;">
            </div>

            <div class="mb-3">
              <label for="comment" class="form-label">Comment:</label>
              <textarea name="review[comment]" id="comment" rows="4" class="form-control" placeholder="Write something..." required></textarea>
            </div>

            <button type="submit" class="btn btn-success w-100">
              <i class="fa-solid fa-paper-plane"></i> Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
