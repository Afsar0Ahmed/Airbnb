<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Wanderlust | Create Listing</title>
  
  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>

  <!-- Custom Styles -->
  <style>
    body {
      background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      backdrop-filter: brightness(0.8);
    }

    .form-container {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 2rem;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    h3 {
      color: #333;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }

    label {
      font-weight: 500;
    }

    .btn-dark {
      background-color: #FF5A5F;
      border: none;
    }

    .btn-dark:hover {
      background-color: #e14c58;
    }

    @media (max-width: 768px) {
      body {
        background-attachment: scroll;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include("../includes/navbar.ejs") %>

  <!-- Create Listing Section -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8">
        <div class="form-container">
          <h3 class="text-center"><i class="fa-solid fa-map-pin text-danger me-2"></i>Create a New Listing</h3>
          <form method="POST" action="/listings">
            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input name="listing[title]" type="text" placeholder="Cozy Beachfront Villa" class="form-control" required />
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" placeholder="Enter description" class="form-control" rows="4" required></textarea>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input name="listing[image]" placeholder="Enter image URL" type="url" class="form-control" required />
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label">Price (per night)</label>
              <input name="listing[price]" placeholder="Enter price" type="number" min="1" class="form-control" required />
            </div>

            <!-- Country -->
            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required />
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button class="btn btn-dark btn-lg" type="submit">
                <i class="fa-solid fa-plus"></i> Add Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include("../includes/footer.ejs") %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
